<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrdecoderview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:padding="20dp"
    >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/scan_close_button">

        </LinearLayout>

    </LinearLayout>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scan_square_overlay"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="183dp"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
    >

        <LinearLayout
                android:id="@+id/scan_text_views_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_send_payment"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#111111"
            />

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_send_payment_description"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="#737373"
            />
        </LinearLayout>

        <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/scan_payment"
                android:layout_marginTop="53dp"
                android:layout_alignEnd="@+id/scan_text_views_layout"
                android:layout_marginEnd="212dp"
        />

    </RelativeLayout>

</RelativeLayout>